package partial

templ LabelInputComponent(inputType, label string){
    <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2">{ label }:</label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type={inputType} name={label} required>
    </div>
}